@model _3DPrintsAPP.ViewModels.FilamentCreateEditViewModel

@{
    ViewData["Title"] = "Add Filament";
}

<div class="container">
    <div class="glass-card">
        <h2>Add New Filament</h2>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label class="form-label">Brand</label>
                <select asp-for="Brand" class="form-select" asp-items="Model.BrandOptions"></select>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Material</label>
                <select asp-for="Material" class="form-select" asp-items="Model.MaterialOptions"></select>
                <span asp-validation-for="Material" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Color</label>
                <select asp-for="FilamentColor" class="form-select" asp-items="Model.ColorOptions"></select>
                <span asp-validation-for="FilamentColor" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Photo URL</label>
                <input asp-for="UploadPhoto" class="form-control" />
                <span asp-validation-for="UploadPhoto" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Weight (kg)</label>
                <input asp-for="WeightKg" class="form-control" />
                <span asp-validation-for="WeightKg" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Diameter (mm)</label>
                <input asp-for="Diameter" class="form-control" />
                <span asp-validation-for="Diameter" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Printer</label>
                <select asp-for="PrinterId" class="form-select" asp-items="Model.PrinterOptions"></select>
                <span asp-validation-for="PrinterId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
