@using _3DPrintsAPP.ViewModels.Filaments
@model FilamentViewModel

@{
    ViewData["Title"] = "Filament Details";
}

<div class="container">
    <div class="glass-card">

        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
            <div>
                <h2 class="mb-0">@Model.Brand</h2>
                <div class="text-muted" style="opacity:.85;">
                    Printer: @Model.PrinterModelName
                </div>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-secondary">Back</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>

        <div class="row g-4">
            <!-- Image -->
            <div class="col-lg-7">
                <div class="details-image-wrap">
                    <img src="@Model.UploadPhoto"
                         alt="@Model.Brand"
                         class="details-img" />
                </div>
            </div>

            <!-- Info -->
            <div class="col-lg-5">
                <div class="glass-card" style="padding:1.1rem;">
                    <div class="d-flex gap-2 flex-wrap mb-3">
                        <span class="pill">Filament</span>
                        <span class="pill ghost">@Model.Material</span>
                        <span class="pill ghost">@Model.FilamentColor</span>
                        <span class="pill ghost">Diameter: @Model.Diameter mm</span>
                        <span class="pill ghost">Weight: @Model.WeightKg kg</span>
                    </div>

                    <h4 class="mb-2">Compatibility</h4>
                    <p class="details-desc">
                        Used with printer: <strong>@Model.PrinterModelName</strong>
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>
