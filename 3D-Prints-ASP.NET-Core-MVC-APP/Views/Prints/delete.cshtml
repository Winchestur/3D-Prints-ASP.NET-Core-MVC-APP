@model _3DPrintsAPP.ViewModels.PrintViewModel

@{
    ViewData["Title"] = "Delete Print";
}

<div class="container">
    <div class="glass-card">

        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
            <div>
                <h2 class="mb-0">Delete Print</h2>
                <div class="text-muted" style="opacity:.85;">
                    Are you sure you want to delete this print?
                </div>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-secondary">Back</a>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning">Details</a>
            </div>
        </div>

        <div class="row g-4">
            <!-- Image -->
            <div class="col-lg-7">
                <div class="details-image-wrap">
                    <img src="@Model.UploadPhoto"
                         alt="@Model.Title"
                         class="details-img" />
                </div>
            </div>

            <!-- Info -->
            <div class="col-lg-5">
                <div class="glass-card" style="padding:1.1rem;">

                    <div class="d-flex gap-2 flex-wrap mb-3">
                        <span class="pill">Print</span>
                        <span class="pill ghost">@Model.PrinterModelName</span>
                        <span class="pill ghost">Time: @Model.PrintTime</span>
                        <span class="pill ghost">@Model.UploadedTime.ToString("dd.MM.yyyy")</span>
                    </div>

                    <h4 class="mb-2">@Model.Title</h4>

                    <p class="details-desc">@Model.Description</p>

                    <h5 class="mt-3 mb-2">Filaments</h5>
                    <div class="d-flex gap-2 flex-wrap">
                        @if (Model.Filaments != null && Model.Filaments.Any())
                        {
                            foreach (var f in Model.Filaments)
                            {
                                <span class="pill ghost">@f</span>
                            }
                        }
                        else
                        {
                            <span style="opacity:.8;">No filaments selected.</span>
                        }
                    </div>

                    <div class="mt-4 d-flex gap-2">
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>

                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
