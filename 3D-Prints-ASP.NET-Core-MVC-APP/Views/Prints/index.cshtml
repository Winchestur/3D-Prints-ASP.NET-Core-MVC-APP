@model IEnumerable<_3DPrintsAPP.ViewModels.PrintViewModel>

@{
    ViewData["Title"] = "Prints";
}

<div class="container">
    <div class="glass-card">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>My Prints</h2>

            <a asp-action="Create" class="btn btn-success">
                Add New Print
            </a>
        </div>

        <div class="row g-4">
            @foreach (var p in Model)
            {
                <div class="col-md-4">
                    <div class="printer-card printer-card-link"
                         onclick="window.location='@Url.Action("Details", "Prints", new { id = p.Id })'">

                        <img src="@p.UploadPhoto"
                             class="printer-img"
                             alt="@p.Title" />

                        <div class="printer-title">@p.Title</div>

                        <div class="d-flex justify-content-center gap-2 flex-wrap mb-2">
                            <span class="pill ghost">Printer: @p.PrinterModelName</span>
                            <span class="pill ghost">@p.PrintTime</span>
                            <span class="pill ghost">@p.UploadedTime.ToShortDateString()</span>
                        </div>

                        <div class="d-flex justify-content-center gap-2 flex-wrap mb-2">
                            @foreach (var f in p.Filaments)
                            {
                                <span class="pill">@f</span>
                            }
                        </div>

                        <div class="printer-actions d-flex gap-2 mt-3"
                             onclick="event.stopPropagation();">
                            <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>

                    </div>
                </div>
            }
        </div>

    </div>
</div>
